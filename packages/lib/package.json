{
	"name": "@lang/lib",
	"module": "index.ts",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"scripts": {
		"dev": "watchexec --exts zig --clear=clear 'bun run build'",
		"build": "bun run build:wasm && bun run build:wasi",
		"dev:wasm": "watchexec --exts zig --clear=clear 'bun run build:wasm'",
		"dev:wasi": "watchexec --exts zig --clear=clear 'bun run build:wasi'",
		"build:wasm": "zig build wasm -p dist -freference-trace=10",
		"build:wasi": "zig build wasi -p dist -freference-trace=10",
		"build:ts": "tsc",
		"dev:ts": "tsc --watch",
		"wasm:dump": "wasm2wat ./dist/bin/lang.wasm",
		"gen:types": "zig run ./generate_types.zig",
		"c:playground": "clang --target=wasm32 -nostdlib -Wl,--no-entry -Wl,--export=playground -o ./.tmp/c-playground.wasm c-playground.c && clang --target=wasm32 -O0 -S -emit-llvm c-playground.c -o ./.tmp/c-playground.ll && wasm2wat ./.tmp/c-playground.wasm -o ./.tmp/c-playground.wat"
	},
	"type": "module"
}
