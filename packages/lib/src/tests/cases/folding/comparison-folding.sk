fn fold_to_true(): i32 {
  // untyped (type number)
  1 == 1;
  1 != 2;
  1 < 2;
  1 <= 1;
  2 > 1;
  2 >= 1;
  2.3 < 2.4;

  // Same type
  1:as(i32) < 2:as(i32);
  1:as(i32) <= 1:as(i32);
  2:as(i32) >= 2:as(i32);
  2:as(i32) == 2:as(i32);

  // Different type, same sign (should coerce to the type with more bits)
  1:as(i32) < 2:as(i8);
  1:as(i8) < 2:as(i32);
  2:as(i32) >= 1:as(i8);
  1:as(i8) <= 2:as(i32);

  // Different sizes, different values
  127:as(i8) < 128:as(i16);
  32767:as(i16) < 32768:as(i32);
}

fn fold_to_false(): i32 { 
  1 == 2;
  1 != 1;
  1 < 1;
  1 > 1;
  2 <= 1;

  // Same type
  1:as(i32) == 2:as(i32);
  1:as(i32) != 1:as(i32);
  1:as(i32) > 1:as(i32);
  2:as(i32) < 1:as(i32);
  1:as(i32) >= 2:as(i32);

  // Different type, same sign (should coerce to the type with more bits)
  1:as(i32) > 2:as(i8);
  1:as(i8) > 2:as(i32);
  2:as(i8) >= 3:as(i32);
  3:as(i32) <= 2:as(i8);

  // Different sizes, different values
  128:as(i16) < 127:as(i8);
  32768:as(i32) < 32767:as(i16);
}
