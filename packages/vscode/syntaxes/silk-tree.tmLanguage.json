{
	"scopeName": "source.silk-tree",
	"name": "Silk Tree Language",
	"fileTypes": ["silk-tree"],
	"patterns": [
		{
			"name": "entity.name.type.silk-tree",
			"match": "%\\d+"
		},
		{
			"name": "entity.name.tag.silk-tree",
			"match": "\\.\\w+"
		},

		{
			"name": "string.quoted.single.silk-tree",
			"match": "'[^']*'"
		},
		{
			"name": "punctuation.separator.silk-tree",
			"match": "[-\\[\\](){}:\\.]+"
		},
		{
			"name": "constant.language.nil.silk-tree",
			"match": "NONE"
		},
		{
			"name": "string.quoted.double.silk-tree",
			"match": "\"[^\"]*\""
		},
		{
			"name": "constant.language.boolean.silk-tree",
			"match": "\\b(true|false)\\b"
		},
		{
			"name": "constant.numeric.integer.silk-tree",
			"match": "\\b\\d+\\b"
		},
		{
			"name": "comment.dir.silk-tree",
			"match": "│|└|├"
		},
		{
			"name": "comment.block.silk-tree",
			"match": ";;.*$"
		},
		{
			"name": "invalid.deprecated.silk-tree",
			"match": "!%\\d+.*$"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.silk-tree",
			"match": ";;.*$"
		}
	}
}
